{
    "extends": ["airbnb", "react-app"],
    "parser": "babel-eslint",
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["src"]
            }
        }
    },
    "env": {
      "browser": true,
      "node": true,
      "jasmine": true
    },
    "rules": {
       "no-class-assign": "off",
       "no-console": "warn",
       "no-shadow": "off",
       "jsx-a11y/media-has-caption": "off",
       "react/no-unused-prop-types": "off",
       "no-confusing-arrow": "off",
       "no-bitwise": [
          "error",
          {
            "allow": [
              "~"
            ]
          }
       ]
    }
}
